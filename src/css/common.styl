/********************************
 * @file  公共样式
 ********************************/
@import './define.styl'

#app
  height 100%

.page
  padding 0 20px 20px

.panel
  position relative
  margin-bottom 20px
  background $color_white
  clear-fix()
  .panel-title
    height 45px
    line-height 45px
    border-bottom 1px solid $color_border_inner
    .title
      display inline-block
      font-size 18px
      padding 0 15px
      height inherit
      cursor pointer
      color $color_default_gray
      &:hover, &.active
        border-bottom  2px solid $color_dark_blue
        color $color_default_black
.direct-up
   color #b73712 !important
.direct-down
   color #427f0c !important